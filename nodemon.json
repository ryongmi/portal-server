{
  "watch": ["src/**/*"],
  "ext": "ts,js,json",
  "ignore": ["src/**/*.spec.ts", "dist/**/*", "node_modules/**/*"],
  "exec": "npm run build && node --inspect=0.0.0.0:9229 dist/main.js",
  "delay": 2000,
  "verbose": true,
  "legacyWatch": true,
  "polling": true,
  "pollInterval": 1000,
  "stdin": false,
  "stdout": true,
  "colours": true
}
